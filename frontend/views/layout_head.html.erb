<% if user_can?('administer_system') %>
  <script type="text/template" id="marcaoReportButtonTemplate">
    <%= link_to I18n.t("marcao.report_button_label"), {:controller => :marcao, :action => :report} %>
  </script>

  <script>
      $(function() {
        $('.system-menu .dropdown-menu').append($('<li class="divider" />'));
        $but = $(AS.renderTemplate('marcaoReportButtonTemplate'));
        $('.system-menu .dropdown-menu').append($('<li />').append($but));
        $('.system-menu').show();
      });
  </script>
<% end %>
